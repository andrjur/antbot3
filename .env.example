# === Bot Configuration ===
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321
ADMIN_GROUP_ID=-1001234567890

# === Webhook Configuration ===
# Режим работы: true=webhook (по умолчанию), false=polling
WEBHOOK_MODE=true

# Внешний адрес без порта (порт обрабатывает Cloudflare)
WEBHOOK_HOST=https://bot.your-domain.com
WEBHOOK_SECRET_PATH=complex_secret_path_here
WEBHOOK_SECRET_TOKEN=complex_secret_token_here

# === Server Configuration ===
# CRITICAL: Must be 0.0.0.0 to listen inside Docker container!
WEBAPP_HOST=0.0.0.0
WEB_SERVER_HOST=0.0.0.0
WEB_SERVER_PORT=8080
WEBHOOK_PATH=/webhook
BASE_WEBHOOK_URL=https://bot.your-domain.com

# === N8N Configuration ===
N8N_HOMEWORK_CHECK_URL=https://n8n.your-domain.com/webhook/uuid
N8N_ASK_EXPERT_URL=https://n8n.your-domain.com/webhook/uuid
N8N_WEBHOOK_SECRET=your_n8n_secret
N8N_DOMAIN=https://n8n.your-domain.com/
N8N_CALLBACK_SECRET=your_callback_secret

# === Monitoring Configuration ===
ALERT_BOT_TOKEN=your_alert_bot_token
ALERT_CHAT_ID=-1001234567890

# === Payment Configuration ===
PAYMENT_INSTRUCTIONS=Инструкция по оплате...

# === AI Configuration ===
OPENROUTER_API_KEY=sk-or-v1-...
